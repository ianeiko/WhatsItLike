<h1>Listing places</h1>

<table>
  <tr>
    <th>City</th>
    <th>Country</th>
    <th>Month</th>
    <th>Rain</th>
    <th>Season</th>
    <th>Temperature</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.city %></td>
    <td><%= place.country %></td>
    <td><%= place.month %></td>
    <td><%= place.rain %></td>
    <td><%= place.season %></td>
    <td><%= place.temperature %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

